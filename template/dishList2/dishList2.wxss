.view{
  display: flex;
  flex-flow: column;
  align-content: center;
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.dishView{
  width: 670rpx;
  height: auto;
  display: flex;
  flex-flow: column;
  margin: 20rpx auto;
  align-content: center;
  border: solid 1px #aaaaaa;
  border-radius: 30rpx;
  -moz-box-shadow:2px 2px 3px #cccccc;
  -webkit-box-shadow:2px 2px 3px #cccccc; 
  box-shadow:2px 2px 3px #cccccc;
}
.dishImg{
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-flow: column;
  margin: 0 auto;
}
.dishImg>image{
  height: 100%;
  width: 100%;
  margin: 0 auto;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.dishInfo{
  height: auto;
  width: 93%;
  margin: 0 auto;
  display: flex;
  flex-flow: column;
  align-content: center;
  padding: 0 20rpx 20rpx 20rpx;
}
