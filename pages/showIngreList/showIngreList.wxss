/* pages/showDishList/showDishList.wxss */
.view{
  display: flex;
  flex-flow: column;
  align-content: center;
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.dishView{
  width: 670rpx;
  height: auto;
  display: flex;
  flex-flow: column;
  margin: 20rpx auto;
  align-content: center;
  border: solid 1px #aaaaaa;
  border-radius: 30rpx;
  -moz-box-shadow:2px 2px 3px #cccccc;
  -webkit-box-shadow:2px 2px 3px #cccccc; 
  box-shadow:2px 2px 3px #cccccc;
}
.dishImg{
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-flow: column;
  margin: 0 auto;
}
.dishImg>image{
  height: 100%;
  width: 100%;
  margin: 0 auto;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.dishInfo{
  height: auto;
  width: 93%;
  margin: 0 auto;
  display: flex;
  flex-flow: column;
  align-content: center;
  padding: 0 20rpx 20rpx 20rpx;
}
.dishName{
  height: auto;
  width: auto;
  display: flex;
  flex-flow: row;
  align-content: center;
  margin-top: 20rpx;
}
.dishName>text{
  font-size: 38rpx;
  line-height: 40rpx;
  margin: auto 0;
  font-weight: bold;
  /* margin: 20rpx auto 10rpx 14rpx; */
}



.jianjie{
  height: 84rpx;
  width: 97%;
  display: flex;
  flex-flow: row;
  font-size: 28rpx;
  line-height: 40rpx;
  /* padding: 0 30rpx; */
  margin: 20rpx auto 0 auto;
  
}
.jianjie>text{
  width: 100%;
  height: auto;
  color: #666;
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space: normal;  
  display:-webkit-box;  
  -webkit-box-orient:vertical;  
  -webkit-line-clamp:2;/*规定最多显示两行*/
}