/* pages/shicaiInfo/shicaiInfo.wxss */
.shicaiTop{
  height: auto;
  width: 100%;
  display: flex;
  flex-flow: column;
  align-content: center;
}
.shicaiTop>image{
  height: 430rpx;
  width: 84%;
  margin: 20rpx auto;
}
.shicaiName{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin: 20rpx auto 0 auto;
}
.shicaiSubName{
  font-size: 26rpx;
  line-height: 40rpx;
  margin: 20rpx auto 0 auto;
  color: #8a8a8a;
  word-break: break-all;
}
.amount{
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 20rpx auto 0 auto;
}
.introduction{
  width: 95%;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.Top{
  height: auto;
  width: 100%;
  align-content: center;
  text-align: center;
  margin-top: 40rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  font-weight: bold;
}
.tabooView{
  width: 100%;
  display: flex;
  flex-flow: column;
  align-content: center;
  margin-top: 20rpx;
}
.shiyi,.jinji{
  width: auto;
  display: flex;
  flex-flow: column;
  margin-top: 16rpx;
  padding: 0 30rpx;
}
.shiyiTitle,.jinjiTitle{
  font-size: 28rpx;
  margin: 10rpx 0rpx;
  /* margin-left: 20rpx; */
  line-height: 40rpx;
  padding-left: 10rpx;
  border-left: solid 6rpx #ffa55a;
  font-weight: bold;
}
.shiyiContent,.jinjiContent{
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 16rpx 30rpx;
  /* margin-right: 20rpx; */
  word-break: break-all;
}
.values{
  width: 100%;
  display: flex;
  flex-flow: column;
  align-content: center;
  margin-top: 10rpx;
}
.valueView{
  width: 89%;
  display: flex;
  flex-flow: column;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 14rpx 20rpx;
  padding: 10rpx 20rpx;
  border: solid 1px #ffcda4;
  border-radius: 20rpx;
  -moz-box-shadow:2px 3px 4px #ffcda4;
  -webkit-box-shadow:2px 3px 4px #ffcda4; 
  box-shadow:2px 3px 4px #ffcda4;
}
